// 레이아웃 타입별 기본 프리셋 찾기
export function getDefaultPresetForLayout(layoutType: LayoutType): LayoutPreset | undefined {
  return DEFAULT_PRESETS.find((p) => p.layoutType === layoutType && p.isDefault)
}

